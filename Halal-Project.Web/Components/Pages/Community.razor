@page "/Community"

<body class="bg-gray-100 text-gray-800">
  <!-- Header Section -->
  <header class="bg-blue-950 py-8 text-white">
    <div class="px-4 mx-auto flex max-w-screen-xl flex-col items-center justify-between md:flex-row">
      <h1 class="text-4xl font-bold">Community</h1>
      <p class="mt-4 text-lg md:mt-0">
        Engage with like-minded individuals and share your journey in halal living.
      </p>
    </div>
  </header>

  <!-- Hero Section -->
  <section class="bg-white py-16 text-center">
    <div class="px-4 mx-auto max-w-screen-lg">
      <h2 class="mb-6 text-blue-950 text-3xl font-bold">Welcome to Our Community</h2>
      <p class="text-gray-600 text-lg leading-7">
        Join our vibrant community to connect, learn, and contribute to the halal lifestyle. Together, we create a platform 
        for collaboration and mutual support.
      </p>
      <a href="/Signup" class="mt-6 bg-blue-950 px-6 py-3 text-white inline-block rounded-lg font-semibold shadow-lg hover:bg-blue-600">
        Become a Member
      </a>
    </div>
  </section>

  <!-- Community Highlights Section -->
  <section class="bg-gray-50 py-16">
    <div class="px-4 mx-auto max-w-screen-xl">
      <h2 class="mb-12 text-blue-950 text-center text-3xl font-bold">Community Highlights</h2>
      <div class="gap-8 grid grid-cols-1 md:grid-cols-3">
        <!-- Highlight 1 -->
        <div class="bg-white p-6 rounded-lg shadow-lg">
          <h3 class="text-gray-800 text-xl font-semibold">Discussion Forums</h3>
          <p class="mt-3 text-gray-600">
            Join engaging discussions on various halal topics, from certifications to recipes.
          </p>
          <a href="/forums" class="mt-4 text-blue-950 inline-block font-semibold">
            Explore Forums &rarr;
          </a>
        </div>
        <!-- Highlight 2 -->
        <div class="bg-white p-6 rounded-lg shadow-lg">
          <h3 class="text-gray-800 text-xl font-semibold">Knowledge Sharing</h3>
          <p class="mt-3 text-gray-600">
            Share your knowledge, insights, and experiences with others in the community.
          </p>
          <a href="/resources" class="mt-4 text-blue-950 inline-block font-semibold">
            Share Resources &rarr;
          </a>
        </div>
        <!-- Highlight 3 -->
        <div class="bg-white p-6 rounded-lg shadow-lg">
          <h3 class="text-gray-800 text-xl font-semibold">Events & Meetups</h3>
          <p class="mt-3 text-gray-600">
            Stay updated on our events and meetups to connect with the community in person.
          </p>
          <a href="/events" class="mt-4 text-blue-950 inline-block font-semibold">
            View Events &rarr;
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Members Section -->
  <section class="bg-white py-16">
    <div class="px-4 mx-auto max-w-screen-xl">
      <h2 class="mb-12 text-blue-950 text-center text-3xl font-bold">Featured Members</h2>
      <div class="gap-8 grid grid-cols-1 md:grid-cols-3">
        <!-- Member 1 -->
        <div class="bg-gray-100 p-6 rounded-lg text-center shadow-lg">
          <img src="https://via.placeholder.com/150" alt="Member 1" class="mb-4 mx-auto rounded-full">
          <h3 class="text-xl font-semibold">Ayesha Ahmed</h3>
          <p class="text-blue-950 text-sm">Recipe Contributor</p>
          <p class="mt-2 text-gray-600">
            Ayesha shares amazing halal recipes that inspire the community.
          </p>
        </div>
        <!-- Member 2 -->
        <div class="bg-gray-100 p-6 rounded-lg text-center shadow-lg">
          <img src="https://via.placeholder.com/150" alt="Member 2" class="mb-4 mx-auto rounded-full">
          <h3 class="text-xl font-semibold">Omar Malik</h3>
          <p class="text-blue-950 text-sm">Forum Moderator</p>
          <p class="mt-2 text-gray-600">
            Omar ensures that our forums are engaging and respectful.
          </p>
        </div>
        <!-- Member 3 -->
        <div class="bg-gray-100 p-6 rounded-lg text-center shadow-lg">
          <img src="https://via.placeholder.com/150" alt="Member 3" class="mb-4 mx-auto rounded-full">
          <h3 class="text-xl font-semibold">Fatima Khan</h3>
          <p class="text-blue-950 text-sm">Event Organizer</p>
          <p class="mt-2 text-gray-600">
            Fatima organizes amazing community meetups and webinars.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action Section -->
  <section class="bg-blue-950 py-12 text-white">
    <div class="px-4 mx-auto max-w-screen-xl text-center">
      <h2 class="text-3xl font-bold">Be Part of Our Growing Community</h2>
      <p class="mt-4 text-lg">
        Join thousands of members who are shaping the future of halal living.
      </p>
      <a href="/Signup" class="mt-6 bg-white px-6 py-3 text-blue-950 inline-block rounded-lg font-semibold shadow-lg hover:bg-gray-100">
        Sign Up Today
      </a>
    </div>
  </section>
  </body>
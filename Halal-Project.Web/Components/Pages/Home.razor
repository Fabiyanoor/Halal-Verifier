@page "/"
@inject NavigationManager Navigation

<PageTitle>Home</PageTitle>

<body class="bg-gray-100">
    <section class="relative h-screen w-full bg-cover bg-center" style="background-image: url('/Assets/hero.jpg');">
        <!-- Overlay for text contrast -->
        <div class="px-4 py-16 text-white container relative z-10 mx-auto flex h-full items-center justify-center text-center">
            <section class="mb-8 px-4 w-full lg:w-1/2 lg:mb-0">
                <div class="bg-white p-8 rounded-lg shadow-lg transition-shadow duration-300 hover:shadow-xl">
                    <h1 class="mb-6 text-gray-900 text-5xl font-extrabold tracking-tight">
                        Discover the Halal Status of Food Products
                    </h1>
                    <p class="mb-8 text-gray-700 text-lg">
                        Empowering consumers to make informed choices by providing real-time halal compliance details for food products and ingredients.
                    </p>
                    <form @onsubmit="HandleSearchSubmit" class="w-full">
                        <div class="gap-2 flex flex-col sm:flex-row">
                            <div class="relative flex-grow">
                                <input type="search"
                                       id="search-dropdown"
                                       @bind="searchQuery"
                                       class="border-gray-300 bg-gray-50 p-3 w-full rounded-lg border text-sm focus:ring-blue-500 focus:border-blue-500"
                                       placeholder="Search by Product Name or Category..."
                                       required />
                            </div>
                            <button type="submit"
                                    class="bg-blue-900 p-3 text-white flex items-center justify-center rounded-lg text-sm font-medium transition-colors duration-300 hover:bg-blue-950">
                                <svg class="mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 19l-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0z" />
                                </svg>
                                Search
                            </button>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </section>

    <!-- Main Content Section -->
    <section class="px-6 py-12 md:px-12">
        <div class="mx-auto max-w-screen-xl text-center">
            <h2 class="mb-6 text-3xl font-semibold">Explore Our Features</h2>
            <div class="gap-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
                <div class="bg-blue-200 p-4 rounded-lg shadow-lg">
                    <a href="certifications.html">
                        <h3 class="mb-4 text-xl font-semibold">Halal Certification</h3>
                        <p class="text-gray-700">Learn more about the halal certification process for food and products.</p>
                    </a>
                </div>
                <div class="bg-blue-200 p-4 rounded-lg shadow-lg">
                    <a href="product.html">
                        <h3 class="mb-4 text-xl font-semibold">Product Evaluation</h3>
                        <p class="text-gray-700">Evaluate the halal status of different products using our platform.</p>
                    </a>
                </div>
                <div class="bg-blue-200 p-4 rounded-lg shadow-lg">
                    <a href="resource.html">
                        <h3 class="mb-4 text-xl font-semibold">Educational Resources</h3>
                        <p class="text-gray-700">Access guides and educational materials on halal practices and standards.</p>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Main Content Section -->
    <section class="px-6 py-12 md:px-12">
        <div class="mx-auto max-w-screen-xl text-center">
            <h2 class="mb-6 text-3xl font-semibold">Explore Halal Categories</h2>
            <div class="gap-8 grid grid-cols-1 md:grid-cols-2">
                <!-- Halal Products -->
                <div class="bg-white p-4 mx-auto max-w-lg rounded-lg shadow-lg dark:bg-gray-800 dark:text-white">
                    <img src="/Assets/Products.webp" alt="Halal Products" class="mb-4 h-48 w-full rounded-lg object-cover">
                    <h3 class="mb-2 text-xl font-semibold">Halal Products</h3>
                    <p class="mb-4">Check halal status and ingredient details for various products.</p>
                    <a href="product.html" class="text-blue-500 hover:underline">Explore Products</a>
                </div>
                <!-- Halal Ingredients -->
                <div class="bg-white p-4 mx-auto max-w-lg rounded-lg shadow-lg dark:bg-gray-800 dark:text-white">
                    <img src="/Assets/Ingredeie.webp" alt="Halal Ingredients" class="mb-4 h-48 w-full rounded-lg object-cover">
                    <h3 class="mb-2 text-xl font-semibold">Halal Ingredients</h3>
                    <p class="mb-4">Learn about permissible and non-permissible ingredients and their halal status.</p>
                    <a href="ingredient.html" class="text-blue-500 hover:underline">Explore Ingredients</a>
                </div>
            </div>
        </div>
    </section>

    <section>

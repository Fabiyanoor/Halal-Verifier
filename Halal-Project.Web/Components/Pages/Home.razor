                <h2 class="mb-4 text-center text-2xl font-bold">Featured Products</h2>
                <!-- Slider Wrapper -->
                <div class="relative">
                    <!-- Left Arrow -->
                    <button id="prevButton" class="-translate-y-1/2 left-0 h-10 w-10 bg-gray-800 text-white absolute top-1/2 z-10 flex transform items-center justify-center rounded-full">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                        </svg>

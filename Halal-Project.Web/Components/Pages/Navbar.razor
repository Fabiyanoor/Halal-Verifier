@page "/Navbar"
@rendermode InteractiveServer

<!-- Fixed Navbar with explicit height and z-index -->
<nav class="fixed top-0 left-0 z-50 h-[80px] w-full bg-blue-950 p-4 text-white shadow-md">
    <div class="container mx-auto flex h-full items-center justify-between">
        <!-- Logo -->
        <a href="/" class="text-xl font-bold">
            Halal Product Evaluation
        </a>

        <!-- Desktop Navigation -->
        <ul class="mx-auto hidden gap-8 md:flex">
            <li><a href="/" class="block hover:text-gray-300">Home</a></li>
            <li><a href="/About" class="block hover:text-gray-300">About</a></li>
            <li><a href="/Resource" class="block hover:text-gray-300">Resources</a></li>
            <li><a href="/Contact" class="block hover:text-gray-300">Contact</a></li>
        </ul>

        <!-- Mobile Menu Button -->
        <button @onclick="ToggleMenu" class="ml-auto md:hidden">
            <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
        </button>
    </div>

    <!-- Mobile Dropdown Menu -->
    <div class="absolute top-full left-0 w-full bg-blue-900 shadow-md transition-all duration-300 md:hidden @(isMenuOpen ? "block" : "hidden")">
        <ul class="flex flex-col space-y-4 p-4">
            <li><a href="/" class="block hover:text-gray-300">Home</a></li>
            <li><a href="/About" class="block hover:text-gray-300">About</a></li>
            <li><a href="/Resource" class="block hover:text-gray-300">Resources</a></li>
            <li><a href="/Contact" class="block hover:text-gray-300">Contact</a></li>
        </ul>
    </div>
</nav>

@code {
    private bool isMenuOpen = false;

    private void ToggleMenu()
    {
        isMenuOpen = !isMenuOpen;
    }
}